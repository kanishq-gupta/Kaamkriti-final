<%- include('partials/header') %>

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Roboto', sans-serif;
        background: linear-gradient(to bottom, #F7EEF1, #FDE2E4);
        overflow: auto;
    }

    .container {
        width: 90%;
        margin: 40px auto;
        display: flex;
        flex-direction: column;
        gap: 30px;
    }

    .profile-card {
        display: flex;
        align-items: center;
        justify-content: space-between;
        background: white;
        border-radius: 15px;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        padding: 20px 40px;
        gap: 20px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .profile-card:hover {
        transform: scale(1.02);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
    }

    .profile-initials {
        width: 250px;
        height: 250px;
        background-color: #474747; /* Background color */
        color: white;
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 10%;
        font-size: 4.5rem;
        font-weight: bold;
    }

    .info {
        flex: 2;
    }

    .info h2 {
        font-size: 1.8rem;
        color: #333;
        margin-bottom: 10px;
    }

    .details p {
        margin: 8px 0;
        font-size: 1rem;
        color: #666;
        display: flex;
        align-items: center;
    }

    .details i {
        color: #E25F98;
        margin-right: 8px;
    }

    .ratings {
        display: flex;
        align-items: center;
        gap: 15px;
        margin: 15px 0;
    }

    .ratings .rating {
        background-color: #27AE60;
        color: white;
        padding: 5px 15px;
        border-radius: 5px;
        font-weight: bold;
    }

    .ratings span {
        font-size: 0.9rem;
        color: #777;
    }

    .trial-offer {
        background:  rgba(255, 248, 234, 0.9);
        border: 1px dashed #786424;
        padding: 10px;
        border-radius: 8px;
        font-size: 1rem;
        color: black;
        margin-top: 15px;
    }

    .pricing {
        text-align: center;
        color: #333;
        font-size: 1.8rem;
        font-weight: bold;
    }

    .pricing .per-month {
        font-size: 1rem;
        color: #777;
        display: block;
    }

    .btn {
        background: linear-gradient(to right, #E25F98, #F7B0C2);
        color: white;
        text-decoration: none;
        padding: 12px 30px;
        border-radius: 25px;
        font-size: 1rem;
        font-weight: bold;
        transition: background 0.3s ease, box-shadow 0.3s ease;
        margin-top: 20px;
        display: inline-block;
    }

    .btn:hover {
        background: #ECB882;
        box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2);
    }

    @media (max-width: 768px) {
        .profile-card {
            flex-direction: column;
            align-items: flex-start;
        }

        .pricing {
            text-align: left;
            margin-top: 15px;
        }
    }
</style>

<div class="container">
    <% workers.forEach(worker => { %>
        <div class="profile-card">
            <div class="profile-initials">
                <%= worker.name.split(' ').map(word => word[0]).join('') %>
            </div>
            <div class="info">
                <h2><%= worker.name %></h2>
                <div class="details">
                    <p><i class="fas fa-map-marker-alt"></i> <%= worker.address %></p>
                    <p><i class="fas fa-user"></i> <%= worker.profession %></p>
                    <p><i class="fas fa-star"></i> <%= worker.religion %></p>
                </div>
                <div class="ratings">
                    <span class="rating"><%= worker.rating || 'N/A' %>/5</span>
                    <span><%= worker.verifiedRatings || '0' %> Verified Ratings</span>
                </div>
                <div class="trial-offer">
                    <strong>Exclusive Offer:</strong> Enjoy 2 days free trial with <%= worker.name %>!
                </div>
            </div>
            <div class="pricing">
                â‚¹<%= worker.salary %>/-<br>
                <span class="per-month">Per month</span>
                <a href="/profile/<%= worker._id %>" class="btn">View Profile</a>
            </div>
        </div>
    <% }); %>
</div>
