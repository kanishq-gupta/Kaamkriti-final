<%- include('partials/header') %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="css/thanks.css">
    <title>Thank You</title>
</head>
<body>
    <div id="app"></div>

    <script>
        // OOPS approach to dynamically create the "Thank You" page
        class ThankYouPage {
            constructor(containerId, userName, websiteName) {
                this.containerId = containerId;
                this.userName = userName;
                this.websiteName = websiteName;
            }

            createHeading() {
                const heading = document.createElement('h1');
                heading.textContent = 'THANK YOU !';
                return heading;
            }

            createParagraph() {
                const paragraph = document.createElement('p');
                paragraph.innerHTML = `Thank you for visiting <span style="color: #D588BB;">Kaamkriti</span> website. You are successfully registered with us.`;
                return paragraph;
            }

            createImage() {
                const image = document.createElement('img');
                image.src = '/images/green-double-circle-check-mark.png';
                image.alt = 'tick';
                return image;
            }

            createGoodLuckMessage() {
                const goodLuckMessage = document.createElement('h1');
                goodLuckMessage.className = 'good-luck';
                goodLuckMessage.textContent = 'Good luck with your next job.';
                return goodLuckMessage;
            }

            createHomeButton() {
                const homeButton = document.createElement('a');
                homeButton.href = '/';
                homeButton.innerHTML = '<button class="home-button">Home</button>';
                return homeButton;
            }

            render() {
                const container = document.getElementById(this.containerId);
                if (!container) {
                    console.error(`Container with ID "${this.containerId}" not found.`);
                    return;
                }

                const wrapper = document.createElement('div');
                wrapper.className = 'containerr';

                // Append all the components
                wrapper.appendChild(this.createHeading());
                wrapper.appendChild(this.createParagraph());
                wrapper.appendChild(this.createImage());
                wrapper.appendChild(this.createGoodLuckMessage());
                wrapper.appendChild(this.createHomeButton());

                container.appendChild(wrapper);
            }
        }

        // Instantiate and render the Thank You page
        const thankYouPage = new ThankYouPage('app');
        thankYouPage.render();
    </script>
</body>
</html>
